{
  "name": "@lunary/backend",
  "main": "index.ts",
  "scripts": {
    "start": "npm run migrate:db && tsx src/index.ts",
    "start:radar": "tsx src/radar.ts",
    "migrate:db": "tsx src/migrate.ts",
    "build": "tsup src/index.ts --format esm",
    "dev": "tsx --env-file=.env --watch src/index.ts",
    "dev:radar": "tsx --env-file=.env --watch src/radar.ts",
    "dev:all": "concurrently -n backend,radar \"npm run start\" \"npm run start:radar\"",
    "test": "tsx src/index.ts"
  },
  "dependencies": {
    "@authenio/samlify-node-xmllint": "^2.0.0",
    "@json2csv/plainjs": "^7.0.5",
    "@koa/cors": "^5.0.0",
    "@sentry/node": "^7.99.0",
    "@sentry/profiling-node": "^1.3.5",
    "@sentry/utils": "^7.99.0",
    "@xenova/transformers": "^2.14.2",
    "argon2": "^0.31.2",
    "bcrypt": "^5.1.1",
    "jose": "^5.2.0",
    "js-tiktoken": "1.0.7",
    "jsonrepair": "^3.6.0",
    "koa": "^2.15.0",
    "koa-bodyparser": "^4.4.1",
    "koa-logger": "^3.2.1",
    "koa-ratelimit": "^5.1.0",
    "koa-router": "^12.0.1",
    "lunary": "^0.7.2",
    "node-cron": "^3.0.3",
    "openai": "^4.28.4",
    "p-queue": "^8.0.1",
    "postgres": "^3.4.3",
    "prexit": "^2.2.0",
    "rouge": "^1.0.3",
    "samlify": "^2.8.11",
    "shared": "*",
    "stripe": "^14.14.0",
    "washyourmouthoutwithsoap": "^1.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/koa": "^2.14.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-logger": "^3.1.5",
    "@types/koa-ratelimit": "^5.0.5",
    "@types/koa-router": "^7.4.8",
    "@types/node": "^20.11.11",
    "@types/node-cron": "^3.0.11"
  }
}
